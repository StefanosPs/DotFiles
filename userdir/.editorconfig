# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
#indent_style             = space
max_line_length          = 80

[*.{php,py}]
#indent_style = space
#indent_size = 4

[*.php]
trim_trailing_whitespace=true

[Makefile]
#indent_style = tab

[{Dockerfile,Dockerfile.template.erb,Dockerfile.sample}]
#indent_style = space
#indent_size = 4

[{package.json,.travis.yml}]
#indent_style = space
#indent_size = 2

[*.yml]
#indent_style = space
#indent_size = 2
